<table class="table table-dark table-striped w-50 p-3">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Held By</th>
            <th scope="col">Effect</th>
            <th scope="col">Type</th>
            <th scope="col">Quantity</th>
            <th scope="col">Magic Item</th>
        </tr>
    </thead>
    <tbody>
        {{#each sampleItemRow}}
        <tr>
            <td>{{name}}</td>
            <td>{{heldBy}}</td>
            <td>{{effect}}</td>
            <td>{{type}}</td>
            <td>{{quantity}}</td>
            <td>{{isMagic}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
<h1>Add a new Item:</h1>
<form class="row">
    <div class="mb-3 col-4">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="name">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Held By</label>
        <input type="text" class="form-control" id="heldBy">
    </div>
    <div class="mb-3 col-4">
        <label class="form-label">Effect (Optional)</label>
        <input type="text" class="form-control" id="effect">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Type</label>
        <input type="text" class="form-control" id="type">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Quantitiy</label>
        <input type="text" class="form-control" id="quantity">
    </div>

    <div class="mb-3 form-check col-4 my-auto">
        <input type="checkbox" class="form-check-input mx-auto" id="exampleCheck1">
        <label class="form-check-label mx-auto" for="exampleCheck1">Magic Item?</label>
    </div>
    <div class="col">
        <button type="submit" class="btn btn-primary btn-lg col-2">Submit</button>
    </div>
</form>