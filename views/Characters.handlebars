<table class="table table-dark table-striped w-50 p-3">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Initiative Bonus</th>
            <th scope="col">Player Character?</th>
            <th scope="col">Hostile to Players?</th>
        </tr>
    </thead>
    <tbody>
        {{#each characters}}
        <tr>
            <td>{{name}}</td>
            <td>{{initiativeBonus}}</td>
            <td>{{playerCharacter}}</td>
            <td>{{hostileToPlayer}}</td>
            <td>
                <form method="post">
                    <input type="hidden" name="charID" value="{{charID}}">
                    <input type="submit" name="Delete" value="Delete">
                </form>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="charID" value="{{charID}}">
                    <input type="submit" name="Edit" value="Edit">
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<h1>Add a new Character:</h1>
<form class="row">
    <div class="mb-3 col-4">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="name">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Initiative Bonus</label>
        <input type="text" class="form-control" id="initiativeBonus">
    </div>

    <div class="mb-3 form-check col-4 my-auto">
        <input type="checkbox" class="form-check-input mx-auto" id="playerCharacter">
        <label class="form-check-label mx-auto" for="playerCharacter">Player Character?</label>
    </div>

    <div class="mb-3 form-check col-4 my-auto">
        <input type="checkbox" class="form-check-input mx-auto" id="hostileToPlayer">
        <label class="form-check-label mx-auto" for="hostileToPlayer">Hostile to Players?</label>
    </div>

    <div class="col">
        <button type="submit" class="btn btn-primary btn-lg col-2">Submit</button>
    </div>
</form>