<table class="table table-dark table-striped w-50 p-3">
    <thead>
        <tr>
            <th scope="col">Encounter ID</th>
            <th scope="col">Round</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        {{#each encounters}}
        <tr>
            <td><a href="/turnorder?enID={{enID}}">Encounter {{enID}}</a></td>
            <td>{{round}}</td>
            <td>{{setting}}</td>
             <td>
                <form method="post">
                    <input type="hidden" name="charID" value="{{enID}}">
                    <input type="submit" name="Delete" value="Delete">
                </form>
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="charID" value="{{enID}}">
                    <input type="submit" name="Edit" value="Edit">
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<h1>Add a new Encounter:</h1>
<form class="row">
    <div class="mb-3 col-4">
        <label class="form-label">Round</label>
        <input type="text" class="form-control" id="round">
    </div>

    <div class="mb-3 col-4">
        <label class="form-label">Setting</label>
        <input type="text" class="form-control" id="setting">
    </div>

    <div class="col my-auto col-2">
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </div>
</form>